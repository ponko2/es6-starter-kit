{
  "env": {
    "es6": true
  },
  "ecmaFeatures": {
    "modules": true,
    "spread": true
  },
  "rules": {
    "arrow-parens": [2, "always"],
    "arrow-spacing": 2,
    "constructor-super": 2,
    "generator-star-spacing": [2, "before"],
    "no-class-assign": 2,
    "no-const-assign": 2,
    "no-this-before-super": 2,
    "no-var": 2,
    "object-shorthand": [2, "always"],
    "prefer-const": 2,
    "prefer-spread": 2,
    "require-yield": 2
  }
}
